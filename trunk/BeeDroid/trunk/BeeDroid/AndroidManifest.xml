<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.turawet.beedroid" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:targetSdkVersion="8"/>
	<uses-permission android:name="android.permission.INTERNET" /> 
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	
	<application android:theme="@android:style/Theme.Light.NoTitleBar"  android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
	
		<activity android:name=".BeeDroid" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activity.FormsActivity"
			android:label="@string/forms_name">
		</activity>

		<activity android:name=".activity.InstanceActivity"
			android:label="@string/forms_name">
		</activity>
		<activity android:name=".activity.ContinueInstanceActivity"
			android:label="@string/instance_name">
		</activity>

		<activity android:name=".activity.OptionsActivity"
			android:label="@string/options_name">
		</activity>

		<activity android:name=".activity.DownloadFormsActivity"
			android:label="@string/downloads_forms_name">
		</activity>
		<activity android:name=".activity.FillNewInstanceActivity"
			android:label="Nueva Instancia">
		</activity>
				
		

	</application>
</manifest>