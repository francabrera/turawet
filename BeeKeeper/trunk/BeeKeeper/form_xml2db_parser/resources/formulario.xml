<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form SYSTEM "form_def.dtd">

<form>
	<id>123</id>
	<version>1</version>
	<name>Formulario de prueba</name>
	<author>
		<user>nicopernas</user>
	</author>
	<sections>
		<section>
			<id>id</id>
			<name>Primera sección</name>
			<text><!-- Elementos tipo texto -->
				<id>id</id>
				<label>Nombre</label>
				<maxlength>100</maxlength>
				<required/>
			</text>
			<date><!-- Elementos tipo fecha -->
				<id>id</id>
				<label>Fecha de nacimiento</label>
				<required/>
				<format>YYYY/MM/DD</format>
			</date>
			<radio><!-- Elementos tipo radio-button -->
				<id>id</id>
				<label>Sexo</label>
				<required>false</required>
				<options>
					<option>
						<label>Masculino</label>
						<id>id</id>
					</option>
					<option>
						<label>Femenino</label>
						<id>id</id>
					</option>
				</options>
			</radio>
			<combo><!-- Elementos tipo combo -->
				<id>id</id>
				<label>Estudios</label>
				<required/>
				<options>
					<option>
						<label>Ingeniería Informática</label>
						<id>id</id>
					</option>
					<option>
						<label>Medicina</label>
						<id>id</id>
					</option>
					<option>
						<label>Farmacia</label>
						<id>id</id>
					</option>
				</options>
			</combo>
			<checkbox><!-- Elementos tipo checkbox -->
				<id>id</id>
				<label>Idiomas</label>
			</checkbox>
			<images_gallery>
				<id>id</id>
				<label>Imágenes</label>
			</images_gallery>
			<video_gallery>
				<id>id</id>
				<label>Vídeos</label>
			</video_gallery>
			<audio_gallery>
				<id>id</id>
				<label>Sonidos</label>
			</audio_gallery>
			<location>
				<id>id</id>
				<label>Localización</label>
			</location>
		</section>
	</sections>
</form>
